<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#ddd"
        android:alpha="0.5"
        android:textSize="48sp"
        android:textAlignment="textEnd"
         />

    <TextView
        android:id="@+id/equation"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/history"
        android:background="#eee"
        android:alpha="0.7"
        android:textSize="48sp"
        android:textAlignment="textEnd"
        android:textFontWeight="900"
    />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/equation"
        android:background="#aaa"
        android:weightSum="5">

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btnOpen"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="createEquation"
                android:padding="0dp"
                android:text="("
                android:textSize="36sp" />

            <Button
                android:id="@+id/btnClose"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="createEquation"
                android:text=")"
                android:textSize="36sp"
                android:padding="0dp"
                />
            <Button
                android:id="@+id/btnClear"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="createEquation"
                android:text="Clear"
                android:textSize="24sp"
                android:padding="0dp"
                />

            <Button
                android:id="@+id/btnDelete"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="createEquation"
                android:text="X"
                android:textSize="36sp"
                android:padding="0dp"
                />


        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn1"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="createEquation"
                android:padding="0dp"
                android:text="1"
                android:textSize="36sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="createEquation"
                android:text="2"
                android:textSize="36sp"
                android:padding="0dp"
            />
            <Button
                android:id="@+id/btn3"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="createEquation"
                android:text="3"
                android:textSize="36sp"
                android:padding="0dp"
            />

            <Button
                android:id="@+id/btnDiv"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="createEquation"
                android:text="/"
                android:textSize="36sp"
                android:padding="0dp"
            />
        </TableRow>

        <TableRow android:layout_weight="1">
            <Button
                android:id="@+id/btn4"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="createEquation"
                android:text="4"
                android:textSize="36sp"
                android:padding="0dp"
                />

            <Button
                android:id="@+id/btn5"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="createEquation"
                android:text="5"
                android:textSize="36sp"
                android:padding="0dp"
                />
            <Button
                android:id="@+id/btn6"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="createEquation"
                android:text="6"
                android:textSize="36sp"
                android:padding="0dp"
                />

            <Button
                android:id="@+id/btnMul"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="createEquation"
                android:text="*"
                android:textSize="36sp"
                android:padding="0dp"
                />

        </TableRow>

        <TableRow android:layout_weight="1">
            <Button
                android:id="@+id/btn7"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="createEquation"
                android:text="7"
                android:textSize="36sp"
                android:padding="0dp"
                />

            <Button
                android:id="@+id/btn8"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="createEquation"
                android:text="8"
                android:textSize="36sp"
                android:padding="0dp"
                />
            <Button
                android:id="@+id/btn9"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="createEquation"
                android:text="9"
                android:textSize="36sp"
                android:padding="0dp"
                />

            <Button
                android:id="@+id/btnAdd"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="createEquation"
                android:text="+"
                android:textSize="36sp"
                android:padding="0dp"
                />

        </TableRow>

        <TableRow android:layout_weight="1">
            <Button
                android:id="@+id/btnDecimal"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="createEquation"
                android:text="."
                android:textSize="36sp"
                android:padding="0dp"
                />

            <Button
                android:id="@+id/btn0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="createEquation"
                android:text="0"
                android:textSize="36sp"
                android:padding="0dp"
                />
            <Button
                android:id="@+id/btnEqual"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="solve"
                android:text="="
                android:textSize="36sp"
                android:padding="0dp"
                />

            <Button
                android:id="@+id/btnSub"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="createEquation"
                android:text="-"
                android:textSize="36sp"
                android:padding="0dp"
                />

        </TableRow>

    </TableLayout>

</RelativeLayout>